<h1>Sign In</h1>

{{#if errors.length}}
    <p class="red-text">could not sign in because:</p>
    <ul class="red-text">
        {{#each errors}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
    {{/if}}

<form action="/sign_in" method="POST">
<div >Username:<input type="text" name="username" value="{{username}}"></div>
<div>Password:<input type="password" name="password"></div>
<div>
 <button class="btn waves-effect waves-light" type="submit" name="action">Sign In</button>
<a href="/sign_up" class="waves-effect waves-light btn">Sign Up</a>
</div>
</form>